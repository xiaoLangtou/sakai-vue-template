{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "include": [
        "cypress.config.*",
        "nightwatch.conf.*",
        "playwright.config.*",
        "rsbuild.config.*",
        "config/**/*"
    ]
}
